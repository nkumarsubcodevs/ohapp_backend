<% include ../partials/leftpart %>
    <% include ../partials/header %>


        <div class="content-wrapper">
            <section class="content-header">
                <h1>Update FAQ</h1>
                <ol class="breadcrumb">
                    <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>

            <section class="content">

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-primary" style="margin: auto; width:50%">
                            <div class="box-header with-border">
                                <h3 class="box-title">Update FAQ</h3>
                            </div>
                            <form role="form" method="POST" action="/faq/update">
                                <input type="hidden" name="page_id" value="<%=option[0]['id']%>" />
                                <div class="box-body">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" style="font-size: 15px;">Title</label>
                                        <input type="text" class="form-control" name="title"
                                            value="<%=option[0]['title']%>" />

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1" style="font-size: 15px;">descripation</label>
                                        <textarea type="text" rows="8" cols="50" class="form-control" name="description"
                                            value=""><%=option[0]['description']%></textarea>
                                    </div>


                                </div>
                                <div class="box-footer" style="justify-content:space-evenly; display: flex;">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a class="btn btn-secondary" href="/faq/1" style="color: white">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <% include ../partials/footer %>