<% include ../partials/header %>
<%include  ../partials/leftpart %>
        
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
     <h1>
      User List
    </h1> 
    <ol class="breadcrumb">
			<li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
			<li class="active">User List</li>
		  </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-xs-12">


          <div class="box">
              <div class="box-header with-border" style="display: flex;">
                <div style="width: 100%;">
                  <h3 class="box-title">User List</h3>
                </div>
                <div style="width: 100%;">
                  <form role="form" method="POST" action="/users/search" style="display: flex;float: right;">
                    <div class="box-body" style="padding:0;">
                      <div class="form-group d-flex">
                        <input type="text" class="form-control" name="search" required/>
                      </div>
                    </div>
                    <div class="box-footer" style="padding-top: 0;">
                      <button type="submit" class="btn btn-primary">search</button>
                    </div>
                  </form> 
                </div>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered">
                  <tbody><tr>
                    <th style="width: 10px">ID</th>
                    <th>First Nam</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Status</th>
                  </tr>

                  <% 
                  if(typeof pageDataValue != 'undefined')
                  { 
                      pageDataValue.forEach(function(item) 
                      {
                          %>
                      <tr>
                          <td><%=item.id%></td>
                          <td><%=item.first_name%></td>
                          <td><%=item.last_name%></td>
                          <td><%=item.email%></td> 
                          <td>
                            <%
                               if(item.status==1)
                               {
                            %>
                               <span class="badge bg-green">Active</span>
                            <%
                               }
                               else
                               {
                            %>
                               <span class="badge bg-red">Inactive</span>
                            <%
                               }
                            %>   
                          </td> 
                          <td>
                            <%
                              if(item.status==1)
                              {
                          %>
                          <a class="btn btn-danger" href="/users/status/0/<%=item.id%>">Inactive</a>
                          <%
                              }
                              else
                              {
                          %>
                          <a class="btn btn-success" href="/users/status/1/<%=item.id%>">Active</a>

                          <%
                              }
                          %>
                        </td>
                      </tr>
                      <%
                      });
                  } 
                  %> 
                                   
                </tbody></table>
              </div>
              <!-- /.box-body -->
              <div class="box-footer clearfix">
                  <% include ../partials/paginate %> 
              </div>
            </div>

</div>
<!-- /.row -->
</div>
</div>
</section>
</div>
<% include ../partials/footer %> 
